package udp;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;

public class SendString {

	public static void main(String[] args)
	{
		String sendString = "Hello world!";
		
		System.out.println("Starting...");
		
		DatagramSocket socket;
        try {
            socket = new DatagramSocket();

            byte [] b=sendString.getBytes();
            
            InetAddress host= InetAddress.getLocalHost();//getByName("134.103.110.161");
            int port=8888;
            
            DatagramPacket request=new DatagramPacket(b,b.length, host, port);
            socket.send(request);
            System.out.println("Packet versendet: " + request.getAddress() + ":" + request.getPort() + " -> " + request.getData());

        } catch (IOException e) {
            System.exit(-1);
        }
	}
}
