package udp;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;

public class ReceiveString {

	public static void main(String[] args) {
		String sendString = "Hello world!";

		DatagramSocket socket;

		System.out.println("Starting...");
		try {
			socket = new DatagramSocket();

			byte[] b = sendString.getBytes();

			InetAddress host = InetAddress.getLocalHost();//getByName("134.103.110.161");
			int port = 8888;

			DatagramPacket dp = new DatagramPacket(b, b.length, host, port);
			while (true) {
				socket.receive(dp);
				System.out.println("Packet empfangen: " + request.getAddress() + ":" + request.getPort() + " -> " +  new String(request.getData()));
			}

		} catch (IOException e) {
			System.exit(-1);
		}
	}
}
